<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statusbar"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:weightSum="1"
    android:padding="5dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_song_name_noti"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:gravity="center_vertical"
        android:text="siJD"
        android:textColor="@color/colorPrimaryDark"
        style="@style/TextAppearance.Compat.Notification"
        android:maxLines="1"
        android:textSize="18sp"
        android:ellipsize="end"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/button_pre_noti"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_pre" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"

        android:background="@android:color/transparent">
        <Button
            android:id="@+id/button_play_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:background="@mipmap/ic_play" />
        <Button
            android:id="@+id/button_pause_noti"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_pause" />

    </FrameLayout>

    <ImageButton
        android:id="@+id/button_next_noti"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_next" />
    <ImageButton
        android:id="@+id/button_delete_noti"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:background="@android:color/transparent"
        android:src="@mipmap/ic_delete" />
</LinearLayout>